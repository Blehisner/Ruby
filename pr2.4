puts "--------conversor segundos a minutos y horas--------"
puts "ingrese segundos: "
segundo = gets.chomp.to_i
def conv (segundo)
  min = segundo/60
  hor = min/60
  return min,hor
end
min, hor = conv(segundo)
puts "son #{min} minutos o #{hor} horas"
